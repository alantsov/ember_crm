<h4>{{name}}</h4>
<div class="row">
  <div class="col-xs-8">
    <div class="form-group">
      {{textarea id="new-note" placeholder="quick note:" value=message classNames="form-control"}}
    </div>
    <div class="form-group">
      <button class="btn btn-primary" {{action 'createNote'}}>Save Note</button>
    </div>
    {{#each note in notes}}
      <p>{{note.message}}</p>
    {{/each}}
  </div>
  <div class="col-xs-4">
    {{edit-event agent=model}}
  </div>
</div>
